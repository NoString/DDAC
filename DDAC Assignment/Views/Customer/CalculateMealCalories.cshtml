@page
@model DDAC_Assignment.Views.Customer.CalculateMealCaloriesModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="row justify-content-between">
        <div class="col-lg-6 ">
            <h1>Calculate Meal Calories</h1>
        </div>
        <div class="col-lg-6">
            <p class="text-secondary mb-0 text-sm-end">Welcome back, XXX</p>
        </div>
    </div>
    <br />
    <!--Modal add new meal calories-->
    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#myModal">
        <i class="fa fa-plus px-2" aria-hidden="true"></i>Add Meal
    </button>

    <!-- The Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Today's Meal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <!-- Modal Body -->
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="dateInput" class="form-label">Select a date:</label>
                        <input type="date" class="form-control" id="dateInput">
                    </div>
                    <div class="mb-3">
                        <label for="selectOption" class="form-label">Select a meal:</label>
                        <select class="form-select" id="selectOption" onchange="updateSelectValue(this.value)">
                            <option value="Option 1">Breakfast</option>
                            <option value="Option 2">Lunch</option>
                            <option value="Option 3">Dinner</option>
                            <option value="Option 4">Snacks</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="textInput1" class="form-label">Food or Beverage:</label>
                        <input type="text" class="form-control" id="textInput1">
                    </div>

                    <div class="mb-3">
                        <label for="textInput2" class="form-label">Calories:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="textInput2" aria-describedby="inputGroupAddon">
                            <span class="input-group-text" id="inputGroupAddon">kcal</span>
                        </div>
                    </div>
                </div>
                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
    <!--Show all the meal-->
    <div class="container">
    </div>

    <!-- Bootstrap JS Bundle with Popper.js -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"></script>

    <!-- Script to update the selected option -->
    <script>
        function updateSelectValue(value) {
            document.getElementById('selectedOption').innerText = 'Selected Option: ' + value;
        }

        function saveChanges() {
            // Add your save changes logic here
            alert('Changes saved!');
        }

        document.getElementById('myModal').addEventListener('shown.bs.modal', function () {
            document.getElementById('dateInput').valueAsDate = new Date();
        });
    </script>
</body>
</html>

