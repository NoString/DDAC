@page
@model GYM.Pages.CoursePage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.Id" />
            <div class="form-group">
                <label asp-for="Course.CourseName" class="control-label"></label>
                <input asp-for="Course.CourseName" class="form-control" />
                <span asp-validation-for="Course.CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Duration" class="control-label"></label>
                <input asp-for="Course.Duration" class="form-control" />
                <span asp-validation-for="Course.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.StartDate" class="control-label"></label>
                <input asp-for="Course.StartDate" class="form-control" />
                <span asp-validation-for="Course.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.CoachName" class="control-label"></label>
                <input asp-for="Course.CoachName" class="form-control" />
                <span asp-validation-for="Course.CoachName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.CoachPhone" class="control-label"></label>
                <input asp-for="Course.CoachPhone" class="form-control" type="number"/>
                <span asp-validation-for="Course.CoachPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.BurnCalories" class="control-label"></label>
                <input asp-for="Course.BurnCalories" class="form-control" />
                <span asp-validation-for="Course.BurnCalories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
